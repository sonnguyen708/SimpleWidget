<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên của bạn" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập tên bạn vào đây" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh" />

    <EditText
        android:id="@+id/edtBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="Nhập ngày sinh vào đây" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính" />

    <RadioGroup
        android:id="@+id/rdgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:layout_weight="1"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rdbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:layout_weight="1"/>
    </RadioGroup>

    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích"/>

        <LinearLayout
            android:id="@+id/llHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbCookHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vào bếp nấu ăn" />

            <CheckBox
                android:id="@+id/cbCafeHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đi cafe với bạn bè" />

            <CheckBox
                android:id="@+id/cbMusicHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nghe nhạc" />

            <CheckBox
                android:id="@+id/cbFAHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ở nhà một mình" />

            <CheckBox
                android:id="@+id/cbFilmHobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem phim" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích khác" />

        <EditText
            android:id="@+id/edtDiffHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập sở thích khác" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
</LinearLayout>